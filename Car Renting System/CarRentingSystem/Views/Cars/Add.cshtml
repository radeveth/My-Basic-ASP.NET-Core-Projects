@model CarFormModel

@{
    ViewData["Title"] = "Add Car";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>

        @* Enctype is for accessing the form to work with files *@
        <form method="post" class="fw-bold" enctype="multipart/form-data">
            <div class="form-group form-margin">
                <label asp-for="Brand"></label>
                <input asp-for="Brand" class="form-control" placeholder="BMW, Mercedes, etc...">
                <span asp-validation-for="Brand" class="small text-danger"></span>
            </div>
            <div class="form-group form-margin">
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control" placeholder="640D, S-Class, etc...">
                <span asp-validation-for="Model" class="small text-danger"></span>
            </div>
            <div class="form-group form-margin">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="This is the perfect car..."></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group form-margin">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Your fine URL here...">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <div class="form-group form-margin">
                <label asp-for="Year"></label>
                <input asp-for="Year" class="form-control" placeholder="@DateTime.UtcNow.Year">
                <span asp-validation-for="Year" class="small text-danger"></span>
            </div>
            <div class="form-group form-margin">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="small text-danger"></span>
            </div>

            <input class="btn btn-primary mt-3 float-end" type="submit" value="Save" />

            @* <input type="file" name="Image" value"Image"/> *@
        </form>
        
        @* <div asp-validation-summary="All"></div> *@

    </div>
</div>
